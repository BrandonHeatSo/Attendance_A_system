<%= form_with(model: base, local: true) do |f| %>
  <%= render 'shared/error_messages', object: base %>

  <!-- 拠点番号 -->
  <%= f.label :base_number, class: "base_label" %>
  <%= f.text_field :base_number, class: "form-control" %>
  <!-- 拠点名 -->
  <%= f.label :base_name, class: "base_label" %>
  <%= f.text_field :base_name, class: "form-control" %>
  <!-- 勤怠種類 -->
  <%= f.label :attendance_type, class: "base_label" %>
  <%= f.text_field :attendance_type, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-base-info" %>
<% end %>
